<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="320dp"
    android:layout_height="100dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/background" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:text="@string/amount_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/etv_amount"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:background="#ffffff"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/amount_value"
                android:textSize="14sp"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp" >

            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:text="@string/tip_text"
                android:textSize="14sp"  />

            <TextView
                android:id="@+id/etv_tip"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:background="#ffffff"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/tip_value"
                android:textSize="14sp"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp" >

            <TextView
                android:id="@+id/tv_split"
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:text="@string/split_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/etv_split"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:background="#ffffff"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/split_value"
                android:textSize="14sp"  />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/verticalline"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#A4BD99"  />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp" >

            <TextView
                android:id="@+id/tv_tip_total"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="@string/total_tip_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/etv_tip_total"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="@string/total_tip_value"
                android:textSize="14sp"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp" >

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="@string/total_text"
                android:textSize="14sp"
                android:textStyle="bold"  />

            <TextView
                android:id="@+id/etv_total"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="@string/total_value"
                android:textSize="14sp"
                android:textStyle="bold"  />
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:paddingBottom="2dp" >
                    <TextView
            android:id="@+id/horizontalline"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#A4BD99" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp" >

            <TextView
                android:id="@+id/tv_total_tip_split"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="@string/total_tip_split_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/etv_total_tip_split"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="@string/total_tip_split_value"
                android:textSize="14sp"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp" >

            <TextView
                android:id="@+id/tv_total_split"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="@string/total_split_text"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/etv_total_split"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="@string/total_split_value"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>