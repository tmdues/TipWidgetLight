<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tipwidget.light"
    android:versionCode="7"
    android:versionName="1.5" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <application
        android:icon="@drawable/logo_small"
        android:label="Tip Widget Calculators - Free"
        android:theme="@style/AppTheme"
        android:name=".LightApp" >
    	<activity
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:name=".MainActivity" 
            android:configChanges="orientation|screenSize" >
        </activity>  
    	<activity
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:name=".CalculatorActivity" 
            android:configChanges="orientation|screenSize" >
        </activity>  
        <activity
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:name=".TipActivity" 
            android:configChanges="orientation|screenSize" >
        </activity>  
        <activity
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:name=".SplitActivity" 
            android:configChanges="orientation|screenSize" >
        </activity>  
        <receiver android:name=".LightTipWidgetProvider">
            <intent-filter >
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>                
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/widget_info" />
        </receiver>
    </application>

</manifest>